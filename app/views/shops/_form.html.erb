     <div class="text-menu">
     <br />
     <ul>
       <li><%= f.radio_button :list_price , :men %><div class="absolute">男性用(MEN)</div></li>
       <li><%= f.radio_button :list_price, :women %><div class="absolute">女性用(WOMEN)</div></li>
       <li><%= f.radio_button :list_price, :others %><div class="absolute">問わない・その他</div><small><p>絵画や美術品など</p></small></li>
     </ul>
    </div>
  </div>
  <br />
    <div class="text-main">
    <div class="field">
       <%= f.label :number_of_sheets, "サイズ" %><br>
     </div>
     <div class="text-menu-serach">
     <br />
     <%= f.text_field :number_of_sheets, id: "sizeform", class: "price-text" , placeholder: "サイズを入力　例：Mサイズ" ,autocomplete: "off"%>
      </div>
    </div>
    <div class="text-main">
      <div class="field">
        <%= f.label :seat, "カラー又は柄" %><br>
      </div>
      <div class="text-menu-serach">
      <br />
     <%= f.text_field :seat, id: "colorform", class: "price-text" , placeholder: "カラーを入力　例：レッド" ,autocomplete: "off"%>
      </div>
    </div>
    <br />

    <div class="text-main">
      <div class="field">
        <%= f.label :shipping_method, "発注方法" %><br>
      </div>
