<% if current_user %>
  <% if current_user.favorites.exists?(shop_id: shop.id) %>
    <%= link_to image_tag("favorite_mark.png"), favorites_unmark_path(shop.id), method: 'delete', remote: true %>
  <% else %>
    <%= link_to image_tag("favorite_unmark.png"), favorites_mark_path(shop.id), method: 'post', remote: true %>
  <% end %>
<% else %>
  <%= image_tag("favorite_unmark.png") %>
<% end %>

